  "version": "0.2.0",
  "configurations": [
    {
      "name": "App - Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start"]
    },
    {
      "name": "App - Client",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "App - Full",
      "configurations": ["App - Server", "App - Client"]
    }
  ]
}